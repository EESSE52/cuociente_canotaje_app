# Environment Configuration Template
# Copy this file to .env and update with your values

# Application
APP_NAME=Club Management SaaS
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=postgresql://club_admin:strongpassword@localhost:5432/club_management

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=change-this-to-a-random-secret-key-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Redis (optional, for caching/rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Email (optional, for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@clubmanagement.com

# Scheduler
SCHEDULER_ENABLED=True
FEE_GENERATION_HOUR=0

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
